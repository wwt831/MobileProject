<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ServerIPLayoutRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	<LinearLayout android:orientation="vertical" android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent" android:layout_height="0dip"
		android:layout_weight="1.0"
		android:background="@drawable/default_bg">
		<RelativeLayout android:id="@+id/RelativeLayout02"
			android:background="@drawable/login_back" android:paddingTop="21.0px"
			android:paddingBottom="10.0px" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginLeft="15.0px"
			android:layout_marginTop="62.0px" android:layout_marginRight="15.0px">

			<EditText
			    android:id="@+id/ServerIP_edit_server"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentTop="true"
			    android:layout_marginBottom="5.0px"
			    android:layout_marginLeft="5.0dip"
			    android:layout_marginRight="5.0dip"
			    android:layout_marginTop="5.0dip"
			    android:background="@drawable/qq_edit_login"
			    android:hint="@string/strInputServerHint"
			    android:inputType="text"
			    android:maxLength="10"
			    android:paddingLeft="45.0sp"
			    android:saveEnabled="true" />

			<TextView android:textSize="16.0dip" android:textColor="#ff3f3f3f"			android:gravity="center_vertical" android:id="@+id/TextView01"
				android:paddingLeft="7.0sp" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginRight="15.0sp"
				android:text="@string/strServerIPInputLabel" android:layout_alignLeft="@+id/ServerIP_edit_server"
				android:layout_alignTop="@+id/ServerIP_edit_server"
				android:layout_alignBottom="@+id/ServerIP_edit_server" />
			<ImageButton android:id="@+id/ImageButton02"
				android:background="@drawable/more_select" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginRight="1.0dip"
				android:layout_alignTop="@+id/ServerIP_edit_server"
				android:layout_alignRight="@+id/ServerIP_edit_server"
				android:layout_alignBottom="@+id/ServerIP_edit_server"
				android:contentDescription="@string/select_more"/>
			<EditText android:id="@+id/ServerIP_edit_port"
				android:background="@drawable/qq_edit_login" android:paddingLeft="45.0sp"
				android:saveEnabled="true" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginRight="1.0dip"
				android:maxLength="16" android:layout_below="@+id/ServerIP_edit_server"
				android:layout_alignLeft="@+id/ServerIP_edit_server"
				android:layout_alignRight="@+id/ServerIP_edit_server"
				android:inputType="number" />
			<TextView android:textSize="16.0dip" android:textColor="#ff3f3f3f"
				android:gravity="center_vertical" android:id="@+id/TextView02"
				android:paddingLeft="7.0sp" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/strPortInputLabel"
				android:layout_alignTop="@+id/ServerIP_edit_port"
				android:layout_alignRight="@+id/TextView01"
				android:layout_alignBottom="@+id/ServerIP_edit_port" />
			<Button android:id="@+id/ServerIP_btn_save" android:layout_width="130.0px"
				android:layout_height="64.0px" android:layout_marginTop="7.0px"
				android:layout_marginRight="12.0dip" android:text="@string/SaveIP"
				android:layout_below="@+id/TextView02"
				android:layout_alignParentRight="true" />
		</RelativeLayout>

		

	</LinearLayout>

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/bottom"
	    android:gravity="center" >

			<Button
			    android:id="@+id/ServerIP_btn_cancel"
			    android:layout_width="96px"
			    android:layout_height="64px"
			    android:text="@string/btn_return" />

		</RelativeLayout></LinearLayout>